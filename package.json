{
  "name": "fountain-tools",
  "version": "0.0.1",
  "description": "Multi-language utils for the Fountain scriptwriting format.",
  "scripts": {
    "clean": "npm run clean:all",
    "clean:cpp": "cd cpp && npm run clean",
    "clean:all": "npm run clean:cpp",
    "build": "npm run build:all",
    "build:csharp": "cd csharp && npm run build",
    "build:cpp": "cd cpp && npm run build",
    "build:all": "npm run build:csharp && npm:build:cpp",
    "test": "npm run test:all",
    "test:js": "cd javascript && npm test",
    "test:py": "cd python && npm run test",
    "test:csharp": "cd csharp && npm run test",
    "test:cpp": "cd cpp && npm run test",
    "test:all": "npm run test:js && npm run test:py && npm run test:csharp && npm run test:cpp",
    "dist": "npm run dist:all",
    "dist:js": "cd javascript && npm run dist",
    "dist:py": "cd python && npm run dist",
    "dist:all": "npm run dist:js && npm run dist:py"
  },
  "keywords": [],
  "author": "Ian Thomas",
  "license": "MIT"
}
